@model LoginForm



<!DOCTYPE html>

<html>
<head>
    <title>Login</title>
</head>
<body>
<h2 class="text-center">Login</h2>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="jumbotron">
            <form role="form" asp-action="Index" asp-controller="Login" method="post">
                <div class="form-group">
                    <label>User Name</label>
                    <input type="text" name="Username" asp-for="Username" autocomplete="off" class="form-control input-sm" placeholder="Username">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="Password" asp-for="Password" autocomplete="off" class="form-control input-sm" placeholder="Password">
                </div>
                <input type="submit" value="Login" class="btn btn-info btn-block">
            </form>
        </div>
    </div>

</div>
</body>
</html>

